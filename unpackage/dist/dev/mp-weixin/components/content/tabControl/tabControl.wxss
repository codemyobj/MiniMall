
.tab_control {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	margin-bottom: 16rpx;
}
.tab_item {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	text-align: center;
	height: 80rpx;
	line-height: 80rpx;
	font-size: 32rpx;
}
.active {
	color: #ff5777;
}
.tab_item.active text {
	padding: 16rpx 10rpx;
	border-bottom: 6rpx solid #FF5777;
}

